{
    "manifest_version": 3,
    "name": "Window Title Extension",
    "version": "1.0",
    "description": "Displays the current window's title in a popup.",
    "permissions": ["activeTab"],
    "icons": {
      "48": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icon.png"
      }
    }
  }
  